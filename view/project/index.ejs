<!DOCTYPE html>
<html lang="en">

<!---header--->
<%- include('../_header'); %>  
 <!-- End of header -->
<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Issue <sup>Tacker</sup></div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="/">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Projects</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/label/label">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Labels</span></a>
            </li>

           
            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Projects</h1>
                        <a href="./create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                                class="fas fa-plus fa-sm text-white-50"></i> Create Project</a>
                    </div>
                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-body">
                            <!-- table start -->
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Author</th>
                                            <th>Description</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(var i=0; i< data.length; i++) { 
                                            let projectId = (data[i]._id.toString());%>
                                            <tr>
                                                <td><%= i+1%></td>
                                                <td><%= data[i].name %></td>
                                                <td><%= data[i].author %></td>
                                                <td><%= data[i].description %></td>
                                                <td>
                                                <a href="/issue/create/<%=projectId%>"><button class="btn btn-primary btn-sm">Add Issue</button></a>
                                                <a href="/issue/<%=projectId%>"><button class="btn btn-primary btn-sm">View Issue</button></a>
                                                <a href="./<%=projectId%>/edit/"><i class="fas fa-edit" style="color:green"></i></a>
                                                <a href="./destroy/<%=projectId%>">
                                                <i class="fas fa-trash" style="color:red"></i></a>
                                            </td>
                                            </tr>
                                       <% }%>
                                        
                                    </tbody>
                                </table>
                            </div>
                            <!-- table end -->
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!---start of script--->
    <%- include('../_script'); %>  
    <!-- End of script -->
</body>

</html>